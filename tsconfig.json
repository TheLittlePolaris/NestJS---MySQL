{
	"compilerOptions": {
		"module": "CommonJS",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "es2020",
		"moduleResolution": "Node",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"incremental": true,
		"paths": {
			"@/*": ["./*"]
		}
	},
	"include": ["./**/*"],
	"exclude": ["node_modules", "dist"]
}
