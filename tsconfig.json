{
	"compilerOptions": {
		"module": "CommonJS",
    "target": "ES6",
    "lib": ["ES2019", "esnext.asynciterable"],
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "Node",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"incremental": true,
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["./**/*"],
	"exclude": ["node_modules", "dist"]
}
